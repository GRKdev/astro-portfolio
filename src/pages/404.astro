---
import Layout from "@/layouts/Layout.astro";
import Link from "@/components/shared/Link.astro";
import presentation from "@/data/presentation";
import SocialLinks from "@/components/SocialLinks.astro";


---

<Layout>
    <main class="flex flex-col gap-20">

        <article class="max-w-6xl mx-auto px-3">
            <header class="mx-auto max-w-3xl text-center content">

              <svg xmlns="http://www.w3.org/2000/svg" class="align-bottom email-icon-vibration" width="240" height="240" viewBox="0 0 24 24" stroke-width="2" stroke="#6366F1" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 7v4a1 1 0 0 0 1 1h3" /><path d="M7 7v10" /><path d="M10 8v8a1 1 0 0 0 1 1h2a1 1 0 0 0 1 -1v-8a1 1 0 0 0 -1 -1h-2a1 1 0 0 0 -1 1z" /><path d="M17 7v4a1 1 0 0 0 1 1h3" /><path d="M21 7v10" /></svg>
              <p class="text-2xl">Error: Not Found</p>

            </header>
          </article>

        <article class="flex flex-col gap-8 pt-20">
        <header class="w-full flex justify-between items-end gap-2">
          <h3 class="text-lg text-neutral-100 flex gap-2 items-end">
            Get in touch
            <svg xmlns="http://www.w3.org/2000/svg" class="align-bottom email-icon-vibration" style="align-self: flex-end;" width="32" height="32" viewBox="0 0 24 24" stroke-width="2" stroke="#6366F1" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M10 21v-6.5a3.5 3.5 0 0 0 -7 0v6.5h18v-6a4 4 0 0 0 -4 -4h-10.5" /><path d="M12 11v-8h4l2 2l-2 2h-4" /><path d="M6 15h1" /></svg>
          </h3>
        </header>
        <p>
          Email me at <Link
            href={`mailto:${presentation.mail}`}
            label={presentation.mail}
            isUnderline
          />
        </p>
  
        <SocialLinks />
      </article>
    </main>
</Layout>
---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";

const projects = (await getCollection("projects")).sort(function (first, second) {
  return first.data.publishedAt.getTime() - second.data.publishedAt.getTime();
});


---

<Layout title="Gorka V. - All Projects">
  <main class="flex flex-col gap-20">
    <h1 class="text-2xl text-neutral-100">Projects</h1>

    <article class="flex flex-col gap-4">
      {
        projects.map((project) => (
          <a
            class="group flex flex-col gap-2 border-t border-neutral-700 py-4 transition-all hover:text-neutral-100"
            href={`/projects/${project.slug}`}
          >
            <div class="flex w-full items-center justify-between">
              <h2 class="text-lg">{project.data.title}</h2>

              <div class="flex flex-row items-center gap-4">
                
                <svg
                  width="18"
                  height="18"
                  viewBox="0 0 18 18"
                  fill="none"
                  class="transition-all duration-300 group-hover:translate-x-1"
                >
                  <path
                    d="M5.25 12.75L12.75 5.25"
                    stroke="#f97316"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                  <path
                    d="M5.25 5.25H12.75V12.75"
                    stroke="#f97316"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                </svg>
              </div>
            </div>
            <p>{project.data.description}</p>
            <div class="flex flex-row flex-wrap pt-4 gap-2">
              {project.data.technologies.map((tech: string, index: number) => (
  <img src={tech} alt={`Technology ${index}`} class="h-5"/>
))}
            </div>
          </a>
        ))
      }
    </article>
  </main>
</Layout>

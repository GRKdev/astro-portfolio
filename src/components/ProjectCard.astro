---
type Technology = {
  name: string;
  route: string;
};
type Props = {
  title: string;
  description: string;
  slug: string;
  image: string;
  imgAlt: string;
  technologies: Technology[];

};

const { title, description, slug, image, imgAlt, technologies } = Astro.props;

---

<a
  class="group flex max-w-sm cursor-pointer flex-col gap-2 rounded-md border border-neutral-700 p-5 transition-all duration-300 hover:-translate-y-2 hover:border-neutral-400 z-10"
  href={`/projects/${slug}`}
>
  <img
    src={image}
    alt={imgAlt}
    class=" h-40 object-cover pb-5 rounded-md"
  />
  <div
    class="flex w-full flex-col justify-between gap-2 md:flex-row md:items-center"
  >
  
    <p class="text-neutral-100">{title}</p>
    <div class="flex flex-row items-center gap-4">
      <svg
        width="18"
        height="18"
        viewBox="0 0 18 18"
        fill="none"
        class="transition-all duration-300 group-hover:translate-x-1"
      >
        <path
          d="M5.25 12.75L12.75 5.25"
          stroke="#6366F1"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
        <path
          d="M5.25 5.25H12.75V12.75"
          stroke="#6366F1"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
      </svg>
    </div>
  </div>

  <p class="nowrap">
    {description}
  </p>

  <div class="flex flex-row flex-wrap pt-4 gap-2 justify-center">
    {technologies.map((tech) => {
      return (
        <img src={tech.route} alt={tech.name} class="h-5"/>
      );
    })}
  </div>
</a>
